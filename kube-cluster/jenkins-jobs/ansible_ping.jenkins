#!groovy
// Ping hosts
properties([disableConcurrentBuilds()])
pipeline {
    agent {
        label 'controller'
    }
    triggers { pollSCM('10 * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
        ansiColor("xterm")
    }
    stages {
        environment {
                ANSIBLE_FORCE_COLOR = true
            }
        stage("Hostname main server") {
            steps {
                sh 'hostname'
            }
        }
        stage("Health main server") {
            steps {
                sh 'uptime'
            }
        }
        stage("Git clone repo") {
            steps {
                sh 'ansible-playbook kube-cluster/ansible-playbook/git-clone.yml -i kube-cluster/hosts'
            }
        }
        stage("check folder") {
            steps {
                sh 'ls -la /tmp/git-clone'}
        }
        stage('Ansible ping') {
            steps {
                echo " ==========PING-HOSTS========= "
                sh 'ansible-playbook kube-cluster/ansible-playbook/ping.yml -i kube-cluster/hosts'
            }
        }
    }
}
