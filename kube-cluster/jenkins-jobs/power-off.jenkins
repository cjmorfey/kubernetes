#!groovy
// Stop VMs
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }


    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
        ansiColor("xterm")
    }
    
    stages {
        stage('shutdown K8S VMs') {
            environment {
                    ANSIBLE_FORCE_COLOR = true
            }
            when {
                beforeInput = true
                branch 'master'
            }
            input {
                message "K8S cluster will be STOPPED!!!"
                id "simple-input"
            }
            steps {
              echo " ========== Power Off k8s VMs ========= "
              sh 'ansible-playbook kube-cluster/ansible-playbook/ping.yml -i kube-cluster/hosts'
            }
        }
    }
    
}
