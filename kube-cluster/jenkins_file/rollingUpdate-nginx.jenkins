#!groovy
// Install master
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'slave'
    }


    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
        ansiColor("xterm")
    }
    stages {
        stage("Rolling Update Nginx") {
            steps {
                echo " ==========Rolling update========= "

                sh 'kubectl -n webserver get -f /root/workspace/deployments/deploy-nginx/deployments/rollingUpdate_nginx.yaml --ignore-not-found'
                sh 'kubectl -n webserver replace --save-config -f'
                sh 'kubectl apply -f /root/workspace/deployments/deploy-nginx/deployments/rollingUpdate_nginx.yaml --record=false'

                sh 'kubectl -n webserver rollout status deployment nginx-deployment'
            }
        }
        stage("Create HPA Nginx"){
            steps {
                sh 'kubectl -n webserver apply -f /root/workspace/deployments/deploy-nginx/deployments/hpa_nginx.yaml'
            }
        }

    }
}